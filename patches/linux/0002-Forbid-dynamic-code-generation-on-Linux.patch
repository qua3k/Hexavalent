+      case __NR_mmap2:
+#endif
+        return RestrictMmapFlagsNoWX();
+      case __NR_mprotect:
+      case __NR_pkey_mprotect:
+        return RestrictMprotectFlagsNoWX();
+    }
+  }
+
   switch (sysno) {
